<h2 class="my-3">Войти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label "Логин" %><br />
    <%= f.text_field :login, autofocus: true, autocomplete: "Логин", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Пароль" %><br />
    <%= f.password_field :password, autocomplete: "Текущий пароль", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label "Запомнить меня" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Войти", class: "btn btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %><br>
