<h1 class="my-3">Seeds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Latin title</th>
      <th>Usda</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seeds.each do |seed| %>
      <tr>
        <td><%= seed.title %></td>
        <td><%= seed.latin_title %></td>
        <td><%= seed.usda %></td>
        <td><%= seed.description[0..50] if seed.description.present? && seed.description.length > 50 %></td>
        <td><%= link_to 'Show', seed %></td>
        <td><%= link_to 'Edit', edit_seed_path(seed) %></td>
        <td><%= link_to 'Destroy', seed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Seed', new_seed_path %>
