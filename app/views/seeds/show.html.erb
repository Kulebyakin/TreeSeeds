<p class="h2 my-3" style="font-family: 'Roboto', sans-serif;">
  <%= @seed.title %> (<%= @seed.latin_title %>)
</p>

<div class="row">
  <div class="col-md-5 my-3">
    <p><%= link_to(image_tag(@seed.image[0].thumb.url, alt: @seed.title, class: "img-fluid"), @seed.image[0].url) %></p>
    <%  if @seed.image.length > 1 %>
      <% @seed.image.each_with_index do |image, i| %>
        <%= link_to(image_tag(image.thumb100.url, class: "img-fluid p-1"), image.url) if i > 0 %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-7 my-3">
    <p>
      <strong>Зона морозостойкости USDA:</strong>
      <%= @seed.usda %>
    </p>
    <p>
    <% @seed.prices.each do |price| %>
      <button class="btn btn-success btn-sm my-1" onClick="add_to_cart(<%= @seed.id %>, <%= price.price %>)">В корзину</button>
      <%= price.amount %>
      <%= price.unit %>
      <%= price.price %> руб. <br>
    <% end %>
    
    </p>
    <p>
      <strong>Описание:</strong> 
      <%= simple_format(@seed.description) %>
    </p>
  </div>
</div>



